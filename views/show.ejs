<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/header.ejs")%>

    <div class="new-task">
        <h2>Task Information</h2>
        <ul>
            <li>Title: <%=task.title; %>
            </li>
            <li>Task Owner: <%=task.owner; %>.
            </li>
            <li> Task Progress: <%=task.progress; %>.
            </li>
            <li>
                Blockers: <% if(task.blocker===true){ %>
                    &#9940;
                    <% } else { %>
                        -
                        <% } %>
        
             <div class="show-buttons">          
                <form action="/project/<%=task.id%>/edit">
                    <button type="Edit" class="btn"><span class="material-symbols-rounded">
                        edit_note
                        </span></button>
                </form>
                <form action="/project/<%=task.id%>?_method=DELETE" method="POST">
                    <button type="delete" class="btn"><span class="material-symbols-rounded">
                        delete_forever
                        </span></button>
                    </form>
                        
                </form>
            </div> 
        </ul>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/header.ejs")%>
<body>

    <% const completedTasks = (tasks) => {
        let count = 0;
        for (let i = 0; i < tasks.length; i++) {
            if (tasks[i].progress === "Completed") {
                count++;
            }
        }
        return count;
    } %>
    <div class="project-status">
        <p>Current Progress:</p><progress min="0" max="<%=tasks.length%>" value="<%=completedTasks(tasks)%>"></progress>
    </div>
    <table>
        <tr>
            <th>Task</th>
            <th>Task Lead</th>
            <th>Progress</th>
            <th>Blocked?</th>
            <th></th>
        </tr>
        <% for(let i=0; i < tasks.length; i++){ %>
            <tr>

                <td><a href="/project/<%=tasks[i].id; %>">
                        <%=tasks[i].title; %>
                    </a></td>
                <td>
                    <%=tasks[i].owner; %>
                </td>
                <td class="progress" style="<% if(tasks[i].progress === 'Completed'){ %>
                    background-color: #3be8b0;
                    border-radius: 36px;
                <% } if(tasks[i].progress === 'Off Track'){ %>
                    background-color: #fc636b;
                    border-radius: 36px;
                <% } if(tasks[i].progress === 'In Progress'){ %>
                    background-color: #02ceff;
                    border-radius: 36px;
                <% }if(tasks[i].progress === 'On hold'){ %>
                    background-color: #ffb900;
                    border-radius: 36px;
                <% }if(tasks[i].progress === 'Needs Revision'){ %>
                    background-color: #6a67ce;
                    border-radius: 36px;
                <% }%>">
                    <%= tasks[i].progress %>
                </td>
                <td>
                    <% if(tasks[i].blocker===true){ %>
                        &#9940;
                        <% } else { %>
                            -
                            <% } %>
                        </td>
                <td>
                    <form action="/project/<%=tasks[i].id%>/edit">
                        <button type="Edit" class="btn"> <span class="material-symbols-rounded">
                            edit_note
                            </span> </button>
                    </form>
                </td>

            </tr>

            <% } %>
    </table>

</body>

</html>